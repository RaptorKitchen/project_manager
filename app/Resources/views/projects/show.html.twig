{% extends 'base.html.twig' %}
{% block title %}Project Detail {% endblock %}
{% block body %}
    <div class="row">
        <div class="col">
            <h1>List:</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2><i class="fas fa-project-diagram"></i> Project {{ project.id }}</h2>
            <ul>
                <li><h2>{{ project.name }}</h2></li>
                <li>Status: {{ project.status }}</li>
            </ul>
        </div>
    </div>
    <div class="col-4">
        <p><i class="fas fa-pencil-alt"></i> Update Status:</p>
        <ul>
            <li><a href="/projects/update/{{ project.id }}/3">Incomplete</a></li>
            <li><a href="/projects/update/{{ project.id }}/2">In Progress</a></li>
            <li><a href="/projects/update/{{ project.id }}/1">Complete</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-4">
            <a href="/projects/dashboard">
                <button>Return to Dashboard</button>
            </a>
        </div>
        <div class="col-4">
            <a href="/projects/delete/{{ project.id }}">
                <button><i class="fas fa-trash-alt"></i> Delete Project</button>
            </a>
        </div>
    </div>
{% endblock %}